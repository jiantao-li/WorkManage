<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECF7F7"
    android:focusable="true"
    android:focusableInTouchMode="true">


    <RelativeLayout
        android:id="@+id/frm_contacts_title"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="#426FFE"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

<!--
        <ImageView
            android:id="@+id/frm_contacts_return"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_button_back" />
-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/menu_phone"
            android:textColor="#ffffff"
            android:textSize="18dp" />
    </RelativeLayout>


    <EditText
        android:id="@+id/frm_contacts_edt_search"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="@drawable/background_edit_white"
        android:gravity="center"
        android:hint="搜索"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frm_contacts_title" />

    <ListView
        android:id="@+id/frm_contacts_lv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frm_contacts_edt_search" />


</android.support.constraint.ConstraintLayout>