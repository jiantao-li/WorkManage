<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_lv_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <ImageView
        android:id="@+id/item_lv_contact_photo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@drawable/user_pic_default" />

    <TextView
        android:id="@+id/item_lv_contact_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/item_lv_contact_photo"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/item_lv_contact_photo"
        android:gravity="center_vertical"
        android:text="18633482348"
        android:textSize="16dp" />

</RelativeLayout>